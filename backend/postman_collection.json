              "mode": "raw",
              "raw": "{\n  \"bp\": {\n    \"systolic\": 120,\n    \"diastolic\": 80\n  },\n  \"heartRate\": 75,\n  \"sugar\": 100,\n  \"sleepHours\": 7,\n  \"weight\": 70,\n  \"symptoms\": [],\n  \"notes\": \"Feeling good today\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
