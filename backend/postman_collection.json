                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/readings/user/{{userId}}?limit=10&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "readings", "user", "{{userId}}"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Latest Reading",
          "request": {
