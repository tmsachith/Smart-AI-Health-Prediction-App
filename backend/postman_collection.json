                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/alerts/user/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts", "user", "{{userId}}"]
