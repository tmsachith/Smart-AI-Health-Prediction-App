            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bp\": {\n    \"systolic\": 165,\n    \"diastolic\": 105\n  },\n  \"heartRate\": 110,\n  \"sugar\": 190,\n  \"sleepHours\": 4,\n  \"weight\": 75,\n  \"symptoms\": [\"headache\", \"dizziness\", \"chest discomfort\"],\n  \"notes\": \"Not feeling well\"\n}",
